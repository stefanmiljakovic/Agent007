<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="rit.com.agent007.loginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="60dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_ImageView_main"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            />
        <TextView
            android:id="@+id/login_TextView_onTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/login_TextView_FirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="65dp"
            android:text="@string/first_name"
            android:textColor="@color/colorWhite"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
        <EditText
            android:id="@+id/login_EditText_FirstName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="13dp"
            android:paddingStart="13dp"
            android:background="@drawable/rounded_borders_edittext"
            android:textSize="20dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="9"
            />
            <ImageButton
                android:id="@+id/login_ImageButton_clearFirstName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/login_EditText_FirstName"
                android:layout_alignEnd="@id/login_EditText_FirstName"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_action_clear"
                android:background="@color/colorWhite"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/login_TextView_LastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:text="@string/last_name"
            android:textColor="@color/colorWhite"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <EditText
                android:id="@+id/login_EditText_LastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:paddingStart="13dp"
                android:background="@drawable/rounded_borders_edittext"
                android:textSize="20dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLength="9"
                />
            <ImageButton
                android:id="@+id/login_ImageButton_clearLastName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/login_EditText_LastName"
                android:layout_alignEnd="@id/login_EditText_LastName"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_action_clear"
                android:background="@color/colorWhite"
                android:visibility="gone"/>
        </RelativeLayout>

        <Button
            android:id="@+id/login_Button_LogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/log_in_button_text"
            android:background="@drawable/login_button"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:clickable="true"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
